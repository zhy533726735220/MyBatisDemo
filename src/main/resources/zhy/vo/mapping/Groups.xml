<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--在每一个配置文件之中实际上都需要有一个独立的命名空间(名字，日后引用就需要此名称)-->
<!--考虑到后续要进行相关的日志的配置操作，所以对于这个资源文件都建议设置一个包名称-->
<!--命名空间(Name Space)，所以习惯"包名称+VO名称+NS"-->
<!--<mapper namespace="vo.mapping.MemberNS">-->
<mapper namespace="zhy.vo.mapping.GroupsNS">
    <resultMap id="GroupsMap" type="Groups">
        <id column="gid" property="gid"/>
        <id column="title" property="title"/>
    </resultMap>

    <select id="findAllByRole" parameterType="integer" resultMap="GroupsMap">
        SELECT gid, title FROM groups WHERE gid IN (SELECT gid FROM role_groups WHERE rid=#{rid});
    </select>
</mapper>